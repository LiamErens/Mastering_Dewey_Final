@code {
    bool isCorrect;
    string response;
    LinkedList<string> categories = new LinkedList<string>();
    LinkedList<string> usedCategories = new LinkedList<string>();
    LinkedList<string> expectedOrder = new LinkedList<string>();
    LinkedList<string> actualOrder = new LinkedList<string>();
    Random rand = new Random();
    private bool isInitialized = false;

    private void PopulateCategories()
    {
        categories.AddLast("Religion");
        categories.AddLast("Philosophy and theory of religion");
        categories.AddLast("The Bible");
        categories.AddLast("Christianity");
        categories.AddLast("Christian practice and observance");
        categories.AddLast("Christian orders and local church");
        categories.AddLast("Social and ecclesiastical theology");
        categories.AddLast("History of Christianity");
        categories.AddLast("Christian denominations");
        categories.AddLast("Other religions");
    }

    private void PopulateExpectedOrder()
    {
        expectedOrder.AddLast("Religion");
        expectedOrder.AddLast("Philosophy and theory of religion");
        expectedOrder.AddLast("The Bible");
        expectedOrder.AddLast("Christianity");
        expectedOrder.AddLast("Christian practice and observance");
        expectedOrder.AddLast("Christian orders and local church");
        expectedOrder.AddLast("Social and ecclesiastical theology");
        expectedOrder.AddLast("History of Christianity");
        expectedOrder.AddLast("Christian denominations");
        expectedOrder.AddLast("Other religions");
    }

    private string GetRandomCategory()
    {
        if (categories.Count > 0)
        {
            int index = rand.Next(categories.Count);
            var node = categories.First;
            for (int i = 0; i < index; i++)
            {
                node = node.Next;
            }
            string randomCategory = node.Value;
            usedCategories.AddLast(randomCategory);
            categories.Remove(node);
            return randomCategory;
        }
        return string.Empty;
    }

    private async Task<List<string>> GetActualOrder()
    {
        return await JSRuntime.InvokeAsync<List<string>>("blazorCheckPositions");
    }

    private async Task CheckPositions()
    {
        List<string> actualOrder = await JSRuntime.InvokeAsync<List<string>>("blazorCheckPositions");

        isCorrect = Enumerable.SequenceEqual(actualOrder, expectedOrder);

        if (isCorrect)
        {
            response = "correct";
            NavigationManager.NavigateTo("Counter");
        }
        else
        {
            // The order is incorrect
            response = "incorrect";
            NavigationManager.NavigateTo("Counter");
        }
    }

    // Initialize the linked lists when the component is initialized
    protected override void OnInitialized()
    {
        if (!isInitialized)
        {
            PopulateCategories();
            PopulateExpectedOrder();
            isInitialized = true;
        }
        base.OnInitialized();
    }
}

